{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": ["NODE_ENV", "DATABASE_URL"],
	"tasks": {
		"build": {
			"dependsOn": ["^build", "db:generate"],
			"env": ["JWT_SECRET", "DATABASE_URL", "PORT"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"db:generate": {
			"cache": false,
			"dependsOn": ["^db:generate"]
		},
		"db:migrate:deploy": {
			"cache": false
		},
		"db:migrate:dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false
		},
		"db:seed": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"env": ["JWT_SECRET", "DATABASE_URL", "PORT"],
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^lint"],
			"env": ["JWT_SECRET", "DATABASE_URL", "PORT"]
		},
		"lint:fix": {
			"dependsOn": ["^lint:fix"],
			"env": ["JWT_SECRET", "DATABASE_URL", "PORT"]
		},
		"nest:generate": {
			"cache": false
		},
		"start:dev": {
			"cache": false,
			"persistent": true
		},
		"test": {},
		"test:e2e": {}
	},
	"ui": "stream"
}
